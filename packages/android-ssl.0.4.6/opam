opam-version: "1"
maintainer: "contact@ocamlpro.com"
build: [
  ["./configure" "OCAMLFIND=%{bin}%/ocamlfind -toolchain android"]
  ["sh" "-c" "%{make}% PATH=%{prefix}%/arm-linux-androideabi/bin/:$PATH LIBDIRS=%{prefix}%/arm-linux-androideabi/lib CC='%{lib}%/android-ndk-linux/toolchains/arm-linux-androideabi-4.7/prebuilt/linux-x86/bin/arm-linux-androideabi-gcc --sysroot %{lib}%/android-ndk-linux/platforms/android-14/arch-arm -I%{prefix}%/arm-linux-androideabi/include'"]
  ["%{make}%" "install"]
]
remove: [
  ["ocamlfind" "-toolchain" "android" "remove" "ssl"]
]
depends: ["android-ocamlfind" "android-c-openssl"]
